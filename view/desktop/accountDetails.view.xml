<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" controllerName="view.desktop.accountDetails" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Selected Company">
		<content>
		<VBox>
		    <Text text='Company Summary to go here' height='35%'></Text>
		    <IconTabBar
            class="iconTabBarPaddingTop"
            id="idIconTabBarMulti"
            >
            <items>
              <IconTabFilter
                id="newsIcon"
                icon="sap-icon://newspaper">
                <List items = "{companyModel>/feedList}">
                <CustomListItem>
                        <Panel expnadable='true' title="companyModel>title">
                           <core:Fragment fragmentName='fragments.NewsFragment' type='XML'/> 
                        </Panel>
                    </CustomListItem>
                </List>
                
              </IconTabFilter>
              <IconTabFilter
                id="finIcon"
                icon="sap-icon://line-chart">
                   <core:Fragment fragmentName='fragments.FinanceFragment' type='XML' />
              </IconTabFilter>
              
            </items>
          </IconTabBar>
		</VBox>
		   
		</content>
	</Page>
</core:View>
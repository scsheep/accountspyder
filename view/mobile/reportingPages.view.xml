<core:View xmlns:core="sap.ui.core" 
    xmlns:ui="sap.ui"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" controllerName="view.mobile.reportingPages" 
	xmlns:viz="sap.viz.ui5.controls" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="News Feeds" showNavButton="true" navButtonPress="backPage">
		<content>
		    <List items = "{companyModel>/feedList}">
                <CustomListItem>
                <content>
                    
                    <Panel expandable='true' headerText="{companyModel>title}" class = 'headerText'>
                            <!-- List items = companyModel>news of custom list items each containing title snippet and link for more. -->
                            <List items = "{companyModel>news}" >
                                <CustomListItem>
                                    <content>
                                    <VBox>
                                        <Text text="{companyModel>snippet}" class = 'newsDetails'/>
                                        <Link text="More..." href="{companyModel>link}"></Link>
                                    </VBox>
                                    </content>
                                </CustomListItem>
                            </List>
                        </Panel>
                </content>
                        
                    </CustomListItem>
                </List>
		</content>
	</Page>
	<Page>
	    <viz:Popover id="idPopOver"></viz:Popover>
        <viz:VizFrame id="idVizFrameLine" vizType="line" width="900px" height="700px">
        </viz:VizFrame>
	</Page>
</core:View>
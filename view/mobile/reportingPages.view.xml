<core:View xmlns:core="sap.ui.core" 
    xmlns:ui="sap.ui"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" controllerName="view.mobile.reportingPages" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="News Feeds" showNavButton="true" navButtonPress="backPage">
		<content>
		    <List items = "{companyModel>/feedList}">
                <CustomListItem>
                <content>
                    
                    <Panel expandable='true' headerText="{companyModel>title}">
                            <!-- List items = companyModel>news of custom list items each containing title snippet and link for more. -->
                            <List items = "{companyModel>news}">
                                <CustomListItem>
                                    <content>
                                        <Text class='newsDetails' text="{companyModel>snippet}"/>
                                    </content>
                                </CustomListItem>
                            </List>
                        </Panel>
                </content>
                        
                    </CustomListItem>
                </List>
		</content>
	</Page>
</core:View>
<VBox xmlns='sap.m'>
    <items>
        <Text class='newsTitle' text='{companyModel>title}'></Text>
        <HBox>
            <items>
                <Image class="newsIcon" src="{companyModel>favicon}" width="25px"></Image>
                <VBox>
                    <items>
                        <Text text="{companyModel>snippet}"></Text>
                        <Link text="More..." href="{companyModel>link}"></Link>
                    </items>
                </VBox>
            </items>
        </HBox>
    </items>
</VBox>